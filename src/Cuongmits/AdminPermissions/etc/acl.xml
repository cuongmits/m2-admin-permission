<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Catalog::catalog">
                    <resource id="Magento_Catalog::catalog_inventory">
                        <resource id="Magento_Catalog::products">
                            <resource id="Magento_AdminPermissions::save_product" title="Save Product" translate="title" sortOrder="100"/>
                            <resource id="Magento_AdminPermissions::new_product" title="Access to Product Create page" translate="title" sortOrder="101"/>
                            <resource id="Magento_AdminPermissions::edit_product" title="Access to Product Edit page" translate="title" sortOrder="102"/>
                            <resource id="Magento_AdminPermissions::delete_product" title="Delete Product(s)" translate="title" sortOrder="103"/>
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
